<h1>Listing attachments</h1>

<table>
  <tr>

    <th>Name</th>

    <th>Description</th>

    <th>Type</th>

    <th>Size</th>

    <th>Date</th>

    <th>File</th>

    <th>Entry id </th>
  </tr>

<% @attachments.each do |attachment| %>
  <tr>

    <td><%=h attachment.name %></td>

    <td><%=h attachment.description %></td>

    <td><%=h attachment.object_content_type %></td>

    <td><%=h attachment.object_file_size %></td>

    <td><%=h attachment.object_updated_at %></td>

    <td><%=h attachment.object_file_name %></td>

    <td><%=h attachment.entry_id %></td>

    <td><%= link_to 'Show', attachment %></td>
    <td><%= link_to 'Edit', edit_attachment_path(attachment) %></td>
    <td><%= link_to 'Destroy', attachment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New attachment', new_attachment_path %>
