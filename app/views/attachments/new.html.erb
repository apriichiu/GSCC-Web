<h1>New attachment</h1>

<% form_for @attachment, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

  <p>
    Entry<br />
    <%= f.select :entry_id, @entries %>
  </p>

  <p>
    <%= f.label :object %><br />
    <%= f.file_field :object %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', request.referer %>
