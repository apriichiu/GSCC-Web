<h1>New entry</h1>

<% form_for(@entry) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label :topic %><br />
    <%= f.text_field :topic %>
  </p>

  <p>
    <%= f.label :series %><br />
    <%= f.text_field :series %>
  </p>

  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>

  <p>
    <%= f.label :verse %><br />
    <%= f.text_area :verse %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', entries_path %>