
<p>
  <b>Name:</b>
  <%=h @folder.name %>
</p>

<p>
  <b>Type:</b>
  <%=h get_folder_type_string @folder.folder_type %>
</p>


<p>
  <b>Description:</b>
  <%= @folder.description %>
</p>


<% if @folder.entries.size > 0 %>
<p>
  <b>Entries:</b>
  <% @folder.entries.each do |e| %>
    <br />  <%=h e.title %>
  <% end %>
</p>


<% end %>

<% if admin? %>
<%= link_to 'Edit', edit_folder_path(@folder) %> |
<% end %>
<%= link_to 'Back', request.referer %>
