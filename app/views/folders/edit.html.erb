<span style="float:left">
<% if @new %>
<h1>Folder</h1>
<% else %>
<h1>Folder</h1>
<% end %>
</span>

<%= login_link %>
<% form_for(@folder) do |f| %>	
<%= f.error_messages %>


<table id='show-view-table' cellpadding="0" cellspacing="0" border="0">
</tbody>
    <th colspan="2" class="ui-widget-header ui-corner-tl ui-corner-tr">
      <% if @new %>
	 New folder
	 <% else %>
	 Editing folder
	 <% end %>
    </th>
  <tr class="odd">
    <th class="ui-state-default"> Name </th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr class="even">
    <th class="ui-state-default" width="50px"> Folder Type </th>
    <td><%= f.select :folder_type, get_folder_type_selection_object %></td>
  </tr>
  <tr>
    <th colspan="2" class="ui-widget-header"> Description </th>
  </tr>
  <tr class = "odd">
    <td colspan="2" class="ui-corner-bottom"> <%= f.text_area :description %></td>
  </tr>
  </tbody>
</table>

