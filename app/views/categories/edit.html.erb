<h1>Editing category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :overview %><br />
    <%= f.text_area :overview %>
  </p>

  <p>
    <%= f.label :theme_verse %><br />
    <%= f.text_area :theme_verse %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>